@{
  Layout = "_Layout";
}

@using SaferSpacesClient.ViewModels
@model RegisterViewModel

<div class="register-form input-style-register">

  <h2>Register a new account</h2>
  <hr/>
  @using (Html.BeginForm("Register", "Account", FormMethod.Post))
  {
    <div class="form-group">
      <label for="UserName"></label>
      @Html.TextBoxFor(m => m.UserName, null, new {@class="form-control input-text", @placeholder="choose a username"})
    </div>
    <div class="form-group">
      <label for="Email"></label>
      @Html.TextBoxFor(m => m.Email, null, new {@class="form-control input-text", @placeholder="What's your email?"})
    </div>
    <div class="form-group">
      <label for="Password"></label>
      @Html.PasswordFor(m => m.Password, new {@class="form-control input-text", @placeholder="password"})
    </div>
    <div class="form-group">
      <label for="ConfirmPassword"></label>
      @Html.PasswordFor(m => m.ConfirmPassword, new {@class="form-control input-text", @placeholder="confirm password"})
    </div>

    <button type="submit" class="btn btn-secondary input-text">Register</button>
  }
</div>