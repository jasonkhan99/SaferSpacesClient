@{
  Layout = "_Layout";
}

@using SaferSpacesClient.ViewModels;
@model LoginViewModel


<div class="login-form input-style-login">
<h3 class="input-text"> Welcome Back! </h3>

@using (Html.BeginForm())
{
  <div class="form-group">
    <label for="UserName"></label>
    @Html.TextBoxFor(m => m.UserName, null, new {@class="form-control input-text", @placeholder="username"})
  </div>
  <div class="form-group">
    <label for="Password"></label>
    @Html.PasswordFor(m => m.Password, new {@class="form-control input-text", @placeholder="password"})
  </div>
  <button type="submit" class="btn btn-secondary input-text">Log In</button> 
  <p class="login-msg input-text">Not a returning user? @Html.ActionLink("Register", "Register")</p>
  
  }
</div>